# Production Environment Configuration
# Copy this file to .env and update the values for production deployment

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Database Configuration
MONGODB_PASSWORD=your-mongodb-password-change-this
REDIS_PASSWORD=your-redis-password-change-this

# External API Configuration
# Add your API keys here
OPENAI_API_KEY=your-openai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
QIANFAN_API_KEY=your-qianfan-api-key
QIANFAN_SECRET_KEY=your-qianfan-secret-key

# Data Source Configuration
TUSHARE_TOKEN=your-tushare-token
FINNHUB_API_KEY=your-finnhub-api-key

# Application Settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT_MINUTES=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5

# Cache Configuration
CACHE_TTL_SECONDS=3600
REDIS_MAX_CONNECTIONS=20